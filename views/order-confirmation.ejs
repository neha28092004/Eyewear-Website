<%- include('partials/header') %>

<body>
    <h1>Order Confirmed!</h1>
    <p>Your order has been successfully placed.</p>
    <p>Order ID: <%= order.id %></p>
    <h2>Order Details</h2>
    <ul>
        <% items.forEach(item => { %>
            <li><%= item.name %> - Quantity: <%= item.quantity %> - Price: $<%= item.price %></li>
        <% }); %>
    </ul>
    <a href="/products">Continue Shopping</a>
</body>

